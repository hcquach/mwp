<section class="section-sidebar">

  <div class="sidebar">

    <div class="sidebar__search">
      <%= form_tag products_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search Product"
        %>
      <% end %>
    </div>

    <div class="sidebar__categories">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><a href="/?online=true">Active</a></li>
        <li><a href="/?online=false">Graveyard</a></li>
        <li>Year</li>
        <li>City</li>
        <li>
          <input type="checkbox" class="sidebar__categories__checkbox" id="navi-popular-toggle">
          <label for="navi-popular-toggle" class="sidebar__categories__button">
            Popular Keywords
          </label>
          <div class="navi-background">&nbsp;</div>
        </li>
        <li><a href="https://www.youtube.com/watch?v=KsFK7tkwl1A">Demoday Video</a></li>
      </ul>
    </div>

    <div class="sidebar__logo-box">

      <a href="https://www.lewagon.com/demoday/">
        <%= image_tag("logo-le-wagon.jpg", alt:"Wagon", class:"sidebar__logo-wagon") %>
      </a>
      <h2 class="sidebar__logo-text">x</h2>
      <a href="https://github.com/hcquach/mwp">
        <%= image_tag("logo-hc.jpg", alt:"Alumni", id:"logo-alumni") %>
      </a>
    </div>

    <div class="sidebar__uparrow">
      <a href='#top'>Back to <i class="fas fa-arrow-circle-up"></i></a>
    </div>

  </div>

</section>

<section class="section-second-sidebar">


</section>

<header class="header">
  <div name="top" class="bg-video">
    <%= video_tag(["video-background.mp4"], muted: true, loop: true, autoplay: true, class: "bg-video__content") %>
    <div class="header__text-box">
      <h1 class="heading-primary">
        <div class="heading-primary--1">
          We are<br><span class="heading-primary-subtitle">Le Wagon students</span><br>
        </div>
        <div class="heading-primary--2">
          We build<br><span class="heading-primary-subtitle">products in 10 days</span>
        </div>
      </h1>
    </div>
  </div>

</header>

<section class="section-top-products">

  <div class="col-xs-12 col-sm-6">
    <h2 class="heading-secondary">
      App of the day
    </h2>
    <%= render @random %>
  </div>

  <div class="col-xs-12 col-sm-6">
    <h2 class="heading-secondary">
      Most popular
    </h2>
    <%= render @most_popular %>
  </div>

</section>

<section class="section-popular-keywords">

  <h2 class="heading-secondary">
    Most Popular Keywords
  </h2>

  <div class="row">
    <% @frequencies.each do |word| %>
      <div class="col-xs-12 col-sm-2">
        <a href="/?query=<%= word[0] %>"><%= "#" + word[0] + " (" + word[1].to_s + ")" %></a>
      </div>
    <% end %>
  </div>

</section>

<section class="section-products">

  <h2 class="heading-secondary">
    All Wagon Products
  </h2>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-sm-4 col-md-3">
        <%= render product %>
      </div>
    <% end %>
  </div>

  <%= will_paginate @products %>

</section>
